cd <%= root %>

- pre_hooks.each do |hook|
  = hook.command
- end

= start_server
= new_session

- windows.each do |window|
  = new_window(window)
  = rename_window(window) if window.name

  - if window.has_panes?
    = send_keys(window.index, window.change_root_command) if window.root
    - window.panes.each do |pane|
      = create_pane if pane.index > 0
      = send_keys(window.index, pane.command)
    - end
    = select_layout(window) if window.layout
  - end
- end

= attach_session

- post_hooks.each do |hook|
  = hook.command
- end
